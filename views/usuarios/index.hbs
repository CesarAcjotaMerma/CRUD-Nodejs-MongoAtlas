<div class="row">
    <div class="col-md-12">
        <a href="/usuario/add" class="btn btn-success btn-block">Crear Usuario Nuevo</a>
        <br></br>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered">
            <thead class="table table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Imagen</th>
                    <th>Rol</th>
                    <th>Accion</th>
                </tr>
            </thead>
            <tbody>
                {{#each usuarios}}
                    <tr>
                    <td><strong>{{ nombre }}</strong></td>
                    <td>{{ correo }}</td>
                    <td>{{ img }}</td>
                    <td>{{ rol }}</td>
                    <td style="text-align:center;">
                        <a style="margin-bottom:10px;" href="/usuario/edit/{{_id}}">
                            <i class='bx bxs-edit-alt bx-sm bx-border-circle'></i>
                        </a>
                        <a>
                            <form action="/usuario/delete/{{_id}}?_method=DELETE" method="POST">
                                <input type="hidden" name="_method" value="DELETE"/>
                                <a>
                                    <button type="submit" style="border:none;backgroud-color:none;">
                                        <i class='bx bxs-trash-alt bx-sm bx-border-circle'></i>
                                    </button>
                                </a>
                            </form>
                        </a>
                    </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>